/* pages/search/search.wxss */
page{background: #f5f5f5;  height: 100%;}  
input{height: 60rpx!important; line-height: 60rpx!important;}
.search{width: 90%; margin-left: 5%; height: 60rpx; line-height: 60rpx; text-align: center; border: 1rpx solid #ccc; border-radius: 40rpx;}
.list{width: 94%; margin-left: 3%; box-shadow: 0px 4px 11px 0px rgba(114,124,142,0.25); margin-top: 30rpx; display: flex; border: 0; border-radius: 8rpx; }
.list .o1{width: 141rpx; margin: 10rpx; }
.list .o1 image{width: 141rpx; height: 156rpx;}
.list .o2{margin: 10rpx 20rpx; position: relative; width: 70%;}
.list .o2 .gname{font-size: 28rpx; color: #333;}
.list .o2 .ftitle{font-size: 26rpx; overflow: hidden; display: -webkit-box;  -webkit-box-orient: vertical; -webkit-line-clamp: 2;}
.list .o2 .discount_price{color: #f77866;}
.list .o2 .add{position: absolute; width: 62rpx; height: 36rpx; line-height: 36rpx; text-align: center; background-color: #f77866; border-radius: 4rpx; right: 0rpx; bottom: 10rpx;}
.list .o2 .add image{width: 26rpx; height: 26rpx;}