/* pages/myProfit/myProfit.wxss */
.bg{width: 100%; height: 150rpx; position: relative;}
.bg .imgwrap{width: 100%; height: 150rpx; position: absolute; top: 0rpx; left: 0rpx; z-index: 1;}
.bg .imgwrap image{width: 100%; height: 150rpx;}
.profit{position: relative; width: 90%; height: 180rpx; left: 5%;box-shadow:0px 2px 33px 2px rgba(159,159,159,0.21); border-radius:19px;  top: 80rpx; z-index: 9; background: #fff;}
.profit .tex{padding: 40rpx;}
.profit button{position: absolute; right: 30rpx; top: 60rpx; width: 160rpx; height: 66rpx; border-radius: 34rpx; background-color: #f77866; color: #fff; font-size: 30rpx; line-height: 66rpx; text-align: center;}

.title{width: 100%; line-height: 50rpx; font-size: 30rpx; text-align: center; color: #b2b2b2; margin-top: 146rpx;}
.wrap{display: flex; justify-content: center; align-items: center; width: 96%; margin-left: 2%; background: #f5f5f5; margin-top: 20rpx;}
.wrap view{flex: 1; text-align: center; line-height: 110rpx;}

.list{width: 100%;}
.list_item{width: 96%; height: 80rpx; display: flex; justify-content: center; align-items: center; font-size: 28rpx; margin-left: 2%; margin-top: 10rpx;}
.list_item view{flex: 1; text-align: center;}
.list_item .user{width: 100%;}
.list_item .user image{width: 30rpx; height: 30rpx; border-radius: 50%; display: inline-block; vertical-align: middle; margin-top: -9rpx;}
.list_item .riqi{font-size: 26rpx; color: #999;}