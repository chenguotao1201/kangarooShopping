/* pages/orderDetail/orderDetail.wxss */
.container{padding-bottom: 30rpx;}
.border20{border-bottom: 20rpx solid #f6f6f6; margin-top: 20rpx;}
.status{width: 100%; height: 140rpx; background-color: #f77866;}
.status .daifu{padding-left: 30rpx;}
.status .daifu image{width: 38rpx; height: 38rpx; display: inline-block; vertical-align: middle; margin-top: -3rpx;}
.time{padding-left: 30rpx; margin-top: 20rpx; color: #fff; font-size: 24rpx;}
.geo{width: 100%;}
.geo image{width: 46rpx; height: 45rpx; vertical-align: middle; margin-top: -48rpx; padding-left: 30rpx;}
.geo .adress{display: inline-block; margin-left: 20rpx; margin-top: 20rpx;}

.list{width: 90%; margin-left: 5%; margin-top: 20rpx;}
.list .title{font-size: 30rpx; color: #333;}
.list .list_item{margin-top: 20rpx;}

.detailed{width: 90%; margin-left: 5%; margin-top: 20rpx;}
.detailed .pub{display: flex; font-size: 28rpx; color: #999; height: 60rpx; margin-top: 20rpx;}
.detailed .pub .left{text-align: left; width: 50%;}
.detailed .pub .right{text-align: right; width: 50%;}
.detailed .payable{line-height: 70rpx; text-align: right;}
.btns{width: 90%; margin-left: 5%; text-align: right;}
.btns button{display: inline-block; width: 150rpx; height: 54rpx; line-height: 54rpx; text-align: center; border-radius: 27rpx; font-size: 26rpx; margin-left: 20rpx; margin-top: 20rpx; color: #ccc; background-color: #fff;}
.btns .pay{background-color: #f77866; color: #fff;}
.btns .cancel{border: 1rpx  solid #ccc;}
