.sanjiao{position: absolute; width:0;height:0;border-left:17rpx solid transparent;border-right:17rpx solid transparent;border-bottom:23rpx solid #FCF1F0; top: -20rpx;left: 220rpx;}


.yaoqing{width: 90%; margin-left: 5%; line-height: 90rpx; text-align: center; background-color: #f77866; color: #fff; font-size: 26rpx; margin-top: 20rpx;}
.shangpin{width: 90%; margin-left: 5%; font-size: 30rpx; color: #999; line-height: 80rpx;}
.text{width: 90%; margin-left: 5%; font-size: 24rpx; color: #999;}

.goods_button{width: 90%; margin-left: 5%; text-align: right; margin-top: 20rpx; border-top: 1rpx solid #eee; height: 80rpx; padding-top: 20rpx;}
.goods_button button{display: inline-block; width: 150rpx; height: 54rpx; border: 1rpx solid #eee; border-radius: 27rpx; background-color: #fff; font-size: 26rpx; line-height: 54rpx; color: #999; margin-left: 20rpx;}