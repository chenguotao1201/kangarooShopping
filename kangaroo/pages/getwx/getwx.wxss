.imgwrap{
    margin-top: 80rpx;
}
.imgwrap image{
    width: 60%;
    height: 300rpx;
    margin-left: 20%;
    background-color: #eee;
}

.contet{
    position: relative;
    margin-top: 80rpx;
    border-top: 1rpx solid #eee;
    height: 40rpx;
}
.contet icon{
    position: absolute;
    top: 28rpx;
    left: 10rpx;
    width: 20rpx;
    height: 20rpx;
    border: 1rpx solid #eee;
}
.contet text{
    position: absolute;
    top: 20rpx;
    left: 35rpx;
    margin-left: 10rpx;
    line-height: 40rpx;
}
.contet input{
    position: absolute;
    top: 14rpx;
    left: 170rpx;
    width: 50rpx;
    color: rgb(28, 188, 180);
}
.contet .txt{
    position: absolute;
    top: 80rpx;
    font-weight: 800;
    display: block;
}

.info{
    position: relative;
    margin-top: 100rpx;
    padding: 30rpx 0rpx;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}
.info image{
    width: 80rpx;
    height: 80rpx;
    margin-left: 10rpx;
}
.info .wxinfo{
    display: inline-block;
    margin-left: 20rpx;
}
.info icon{
    position: absolute;
    right: 30rpx;
    top: 35rpx;
} 

