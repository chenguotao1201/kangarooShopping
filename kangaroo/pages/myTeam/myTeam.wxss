/* pages/myProfit/myProfit.wxss */
.bg{width: 100%; height: 180rpx; position: relative;}
.bg .imgwrap{width: 100%; height: 180rpx; position: absolute; top: 0rpx; left: 0rpx; z-index: 1;}
.bg .imgwrap image{width: 100%; height: 180rpx;}
.profit{position: relative; width: 94%; height: 180rpx; left: 3%;box-shadow:0px 2px 33px 2px rgba(159,159,159,0.21); border-radius:10px;  top: 80rpx; z-index: 9; background: #fff; display: flex;}
.profit .pub{flex: 1; text-align: center; color: #323232; margin-top: 50rpx;}
.profit .pub .count{font-size: 24rpx;}
.profit .pub image{vertical-align: middle; margin-top: -5rpx;}

.title{width: 100%; line-height: 50rpx; font-size: 30rpx; text-align: center; color: #b2b2b2; margin-top: 146rpx;}
.wrap{display: flex; justify-content: center; align-items: center; width: 96%; margin-left: 2%; background: #f5f5f5; margin-top: 20rpx; font-size: 30rpx;}
.wrap view{flex: 1; text-align: center; line-height: 110rpx;}

.list{width: 100%;}
.list_item{width: 96%; height: 80rpx; display: flex; justify-content: center; align-items: center; font-size: 28rpx;}
.list_item view{flex: 1; text-align: center;}
.list_item .user{width: 100%;}
.list_item .user image{width: 36rpx; height: 36rpx; border-radius: 50%; display: inline-block; vertical-align: middle; margin-top: -5rpx;}
.list_item .riqi{font-size: 28rpx; color: #999; margin-left: 10rpx;}